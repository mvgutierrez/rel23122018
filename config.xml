		<icon src="images/icono/ios/icons/Icon-Small-50x50@2x.png" width="100" height="100" />
		<icon height="1024" width="1024" src="images/icono/ios/iTunesArtwork@2x.png" />
		<splash src="images/splash/iphone66s7.png" width="750" height="1334"/>
	<splash src="images/splash/iphonesinretina.png" width="320" height="480"/>
